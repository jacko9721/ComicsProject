<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page2"
    tools:layout_editor_absoluteX="105dp">

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/comic"
        android:textSize="35sp" />


    <Button
        android:id="@+id/button_choisir_les_comics"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:onClick="page2"
        android:text="@string/choisir_les_comics"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />
    <Button
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="ComicsVine"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="217dp"
        android:text="Site Comics Vine"
        android:textSize="15sp"
        android:translationY="80dp"
        />


</RelativeLayout>